@available(macOS 9999, iOS 9999, watchOS 9999, tvOS 9999, *)
@frozen
public struct UnsafeAtomicInt {
  @usableFromInline
  internal let _ptr: UnsafeMutableRawPointer

  @inlinable
  public init(_ pointer: UnsafeMutablePointer<Int>) {
    self._ptr = UnsafeMutableRawPointer(pointer)
  }
}

@available(macOS 9999, iOS 9999, watchOS 9999, tvOS 9999, *)
extension UnsafeAtomicInt {
  @_transparent
  public func atomicLoad(
    ordering: AtomicMemoryOrdering
  ) -> Int {
    return _ptr._atomicLoadWord(ordering: ordering)
  }

  @_transparent
  public func atomicStore(
    _ desired: Int,
    ordering: AtomicMemoryOrdering
  ) {
    _ptr._atomicStoreWord(desired, ordering: ordering)
  }

  @_transparent
  public func atomicCompareExchange(
    expected: inout Int,
    desired: Int,
    ordering: AtomicMemoryOrdering
  ) -> Bool {
    return _ptr._atomicCompareExchangeWord(
      expected: &expected,
      desired: desired,
      ordering: ordering)
  }

% for (operationName, op) in integerOperations:
  @_transparent
  @discardableResult
  public func atomicFetchThen${operationName}(
    _ operand: Int,
    ordering: AtomicMemoryOrdering
  ) -> Int {
    return _ptr._atomicFetchThen${operationName}Word(
      operand,
      ordering: ordering)
  }
% end

% for (operationName, op) in integerOperations:
  @_transparent
  @discardableResult
  public func atomic${operationName}ThenFetch(
    _ operand: Int,
    ordering: AtomicMemoryOrdering
  ) -> Int {
    return _ptr._atomic${operationName}ThenFetchWord(
      operand,
      ordering: ordering)
  }
% end
}

