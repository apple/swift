  public func atomicFetchThen${operationName}Word(
    _ operand: UInt,
    ordering: AtomicMemoryOrdering
  ) -> UInt {
    let result = _ptr._atomicFetchThen${operationName}Word(
      Int(bitPattern: operand),
      ordering: ordering)
    return UInt(bitPattern: result)
  }
% end

