@available(macOS 9999, iOS 9999, watchOS 9999, tvOS 9999, *)
@frozen
public struct UnsafeAtomicBool {
  @usableFromInline
  internal let _ptr: UnsafeMutableRawPointer

  @inlinable
  public init(_ pointer: UnsafeMutablePointer<Bool>) {
    self._ptr = UnsafeMutableRawPointer(pointer)
  }
}

@available(macOS 9999, iOS 9999, watchOS 9999, tvOS 9999, *)
extension UnsafeAtomicBool {
  @_transparent
  public func atomicLoad(
    ordering: AtomicMemoryOrdering = .sequentiallyConsistent
  ) -> Bool {
    let value = _ptr._atomicLoadWord(ordering: ordering)
    return value != 0
  }

  @_transparent
  public func atomicStore(
    _ desired: Bool,
    ordering: AtomicMemoryOrdering = .sequentiallyConsistent
  ) {
    _ptr._atomicStoreWord(desired ? 1 : 0, ordering: ordering)
  }

  @_transparent
  public func atomicCompareExchange(
    expected: inout Bool,
    desired: Bool,
    ordering: AtomicMemoryOrdering = .sequentiallyConsistent
  ) -> Bool {
    var expectedInt = desired ? 1 : 0
    let success = _ptr._atomicCompareExchangeWord(
      expected: &expectedInt,
      desired: desired ? 1 : 0,
      ordering: ordering)
    expected = (expectedInt != 0)
    return success
  }

% for (operationName, intName, op) in boolOperations:
  @_transparent
  @discardableResult
  public func atomicFetchThen${operationName}(
    _ operand: Bool,
    ordering: AtomicMemoryOrdering = .sequentiallyConsistent
  ) -> Bool {
    let result = _ptr._atomicFetchThen${intName}Word(
      operand ? 1 : 0,
      ordering: ordering)
    return (result != 0)
  }
% end

% for (operationName, intName, op) in boolOperations:
  @_transparent
  @discardableResult
  public func atomic${operationName}ThenFetch(
    _ operand: Bool,
    ordering: AtomicMemoryOrdering = .sequentiallyConsistent
  ) -> Bool {
    let result = _ptr._atomic${intName}ThenFetchWord(
      operand ? 1 : 0,
      ordering: ordering)
    return (result != 0)
  }
% end
}

