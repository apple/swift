    _ desired: UnsafeMutablePointer<Pointee>?,
    ordering: AtomicMemoryOrdering = .sequentiallyConsistent
  ) {
    let desiredInt = Int(bitPattern: desired)
    _ptr._atomicStoreWord(desiredInt, ordering: ordering)
