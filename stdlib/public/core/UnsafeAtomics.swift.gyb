extension UnsafeAtomicUInt {
  @_transparent
  public func atomicLoad(
    ordering: AtomicMemoryOrdering
  ) -> UInt {
    return UInt(bitPattern: _ptr._atomicLoadWord(ordering: ordering))
  }

  @_transparent
  public func atomicStore(
    _ desired: UInt,
    ordering: AtomicMemoryOrdering
  ) {
    _ptr._atomicStoreWord(Int(bitPattern: desired), ordering: ordering)
  }

  @_transparent
  public func atomicCompareExchange(
    expected: inout UInt,
    desired: UInt,
    ordering: AtomicMemoryOrdering
  ) -> Bool {
    var expectedInt = Int(bitPattern: expected)
    let success = _ptr._atomicCompareExchangeWord(
      expected: &expectedInt,
      desired: Int(bitPattern: desired),
      ordering: ordering)
    expected = UInt(bitPattern: expectedInt)
    return success
  }

