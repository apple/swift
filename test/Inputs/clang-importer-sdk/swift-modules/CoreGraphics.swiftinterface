// swift-interface-format-version: 1.0
// swift-module-flags: -module-name CoreGraphics -enable-library-evolution

@_exported import ObjectiveC
@_exported import CoreGraphics

@inlinable public func == (lhs: CGPoint, rhs: CGPoint) -> Bool {
  return lhs.x == rhs.x  &&  lhs.y == rhs.y
}

@_fixed_layout
public struct CGFloat {
#if arch(i386) || arch(arm)
  public typealias UnderlyingType = Float
#elseif arch(x86_64) || arch(arm64)
  public typealias UnderlyingType = Double
#endif

  @inlinable public init() { 
    self.value = 0.0
  }

  @inlinable public init(_ value: Int) { 
    self.value = UnderlyingType(value)
  }

  @inlinable public init(_ value: Float) { 
    self.value = UnderlyingType(value)
  }

  @inlinable public init(_ value: Double) { 
    self.value = UnderlyingType(value)
  }

  @_hasStorage @usableFromInline internal var value: UnderlyingType
}

@inlinable public func ==(lhs: CGFloat, rhs: CGFloat) -> Bool {
  return lhs.value == rhs.value
}

extension CGFloat : ExpressibleByIntegerLiteral, ExpressibleByFloatLiteral, Equatable {
  @inlinable public init(integerLiteral value: UnderlyingType) {
    self.value = value
  }

  @inlinable public init(floatLiteral value: UnderlyingType) {
    self.value = value
  }
}

public extension Double {
  @inlinable init(_ value: CGFloat) {
    self = Double(value.value)
  }
}
